{
  "expo": {
    "name": "Roll",
    "slug": "roll",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "jsEngine": "hermes",
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera to take photos and videos",
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone to record audio with videos"
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#CC0000",
          "sounds": []
        }
      ],
      "expo-font",
      "expo-apple-authentication"
    ],
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "scheme": "roll",
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Allow access to your camera to take photos and videos",
        "NSMicrophoneUsageDescription": "Allow access to your microphone to record audio with videos",
        "NSLocationWhenInUseUsageDescription": "Allow access to your location to show nearby posts and events",
        "NSLocationAlwaysUsageDescription": "Allow access to your location to show nearby posts and events",
        "ITSAppUsesNonExemptEncryption": false,
        "UIBackgroundModes": ["remote-notification"]
      },
      "notification": {
        "icon": "./assets/icon.png",
        "color": "#CC0000"
      },
      "bundleIdentifier": "com.roll.roll"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION"
      ],
      "package": "com.roll.roll",
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "roll"
            },
            {
              "scheme": "https",
              "host": "goingout-8b2e0.firebaseapp.com"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "9b517a62-41c2-4df3-8d22-02904e54962f"
      }
    }
  }
}
